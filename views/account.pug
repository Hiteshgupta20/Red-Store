//---------------------Account page--------------------------
.account-page
  .container
    .row
      .col-2
        img(src='/static/images/image1.png' width='100%')
      .col-2
        .form-container
          .form-btn
            span(onclick='login()') Login
            span(onclick='register()') Register
            hr#Indicator
          form#LoginForm(method='Post'  action='/account')
            input(type='text' placeholder='User Name' name='userName')
            input(type='password' placeholder='Password' name='password')
            button.btn(type='submit') Login
            a(href='') Forgot password
          form#RegForm(method='post'  action='/account')
            input(type='text' placeholder='User Name' name='userName')
            input(type='email' placeholder='Email' name='email')
            input(type='password' placeholder='Password' name='password')
            button.btn(type='submit') Register
